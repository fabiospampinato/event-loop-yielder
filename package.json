  },
  "license": "MIT",
  "author": {
    "name": "Fabio Spampinato",
    "email": "spampinabio@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fabiospampinato/event-loop-yielder.git"
  },
  "keywords": [
    "event",
    "loop",
    "yield",
    "thread",
    "scheduling"
  ],
  "devDependencies": {
    "fava": "^0.0.4",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.5",
    "typescript-transform-export-interop": "^1.0.4"
  }
}
